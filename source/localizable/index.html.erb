<div id="bio" class="container-outer">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="section-header mb-3">
          <div class="divider"></div>
          <h1 class="title-section"><%= t(:title_bio) %></h1>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-4 d-md-none">
        <img src="/images/alejandra-azuero-quijano.jpg" class="w-100 mb-3">
      </div>
      <div class="col-md-6">
        <div class="block pe-3">
          <p class="mb-3"><%= t(:bio_copy) %></p>
        </div>
      </div>
