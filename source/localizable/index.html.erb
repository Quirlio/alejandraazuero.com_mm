        <img src="/images/alejandra-azuero-quijano.jpg" class="w-100">
      </div>
    </div>
  </div>
</div>
<div id="publication-and-writing" class="">
  <div class="container-outer">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10">
          <div class="section-header mb-3">
            <div class="divider"></div>
            <h1 class="title-section mb-3"><%= t(:title_writing) %></h1>
          </div>

          <div class="bg-white p-4 mb-5">
            <div class="row">
              <div class="col-md-6">
                <img src="/images/el-paro-como-teoria.jpg" class="w-100">
              </div>
              <div class="col-md-6">
                <div class="block pe-3">
                  <div class="divider-sm"></div>
                  <h2 class="mb-1">El Paro Como Teoría</h2>
                  <p class="text-bold text-sm mb-3"><%= t(:book_publisher) %></p>
                  <p class="mb-3 text-md"><%= t(:book_blurb_1) %></p>
                  <p class="mb-3 text-md"><%= t(:book_blurb_2) %></p>
                  <p class="mb-4 text-md"><%= t(:book_blurb_3) %></p>
